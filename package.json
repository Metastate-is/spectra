		"class-validator": "^0.14.2",
		"ethers": "^6.15.0",
		"google-proto-files": "^5.0.0",
		"kafkajs": "^2.2.4",
		"ksuid": "^3.0.0",
		"lodash": "^4.17.21",
		"neo4j-driver": "^5.28.1",
		"nest-commander": "^3.17.0",
		"nestjs-i18n": "^10.5.1",
		"path": "^0.12.7",
		"pg": "^8.16.2",
		"pino": "^9.7.0",
		"prom-client": "^15.1.3",
		"redis": "^4.7.1",
		"reflect-metadata": "^0.2.2",
		"rxjs": "^7.8.1",
		"te": "^0.0.1"
	},
	"devDependencies": {
		"@nestjs/cli": "^11.0.0",
		"@nestjs/schematics": "^11.0.0",
		"@nestjs/testing": "^11.1.3",
		"@nomicfoundation/hardhat-toolbox": "^6.1.0",
		"@swc/cli": "^0.6.0",
		"@swc/core": "^1.10.7",
		"@types/express": "^5.0.0",
		"@types/jest": "^29.5.14",
		"@types/node": "^22.10.7",
		"@types/supertest": "^6.0.2",
		"cache-manager-redis-store": "^3.0.1",
		"globals": "^16.0.0",
		"hardhat": "^2.26.1",
		"jest": "^29.7.0",
		"source-map-support": "^0.5.21",
		"supertest": "^7.0.0",
		"ts-jest": "^29.2.5",
		"ts-loader": "^9.5.2",
		"ts-node": "^10.9.2",
		"ts-node-dev": "^2.0.0",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.7.3"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node",
		"moduleNameMapper": {
			"^src/(.*)$": "<rootDir>/$1"
		}
	}
}

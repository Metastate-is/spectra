{
	"name": "spectra",
	"version": "0.0.1",
	"description": "",
	"author": "Perov David",
	"private": true,
	"license": "UNLICENSED",
	"scripts": {
		"build": "nest build",
		"start": "nest start",
		"start:dev": "nest start --watch",
		"start:debug": "ts-node-dev --inspect --respawn src/main.ts",
		"start:prod": "node dist/main",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./test/jest-e2e.json",
		"lint": "biome check --apply .",
		"lint:fix": "biome check --apply .",
		"format": "biome format .",
		"format:fix": "biome format --write .",
		"cli:dev": "ts-node -r tsconfig-paths/register src/cli.ts",
		"cli:build": "nest build && node dist/cli.js",
		"cli": "ts-node -r tsconfig-paths/register src/cli.ts",
		"metastate:deploy": "npx hardhat run scripts/contract-deploy.ts --network metastate"
	},
	"dependencies": {
		"@biomejs/biome": "^1.5.3",
		"@ethersproject/strings": "^5.8.0",
		"@grpc/reflection": "^1.0.4",
		"@metastate-is/proto-models": "^1.28.0",
		"@nestjs/cache-manager": "^3.0.1",
		"@nestjs/common": "^11.1.3",
		"@nestjs/config": "^4.0.2",
		"@nestjs/core": "^11.0.1",
		"@nestjs/microservices": "^11.1.3",
		"@nestjs/platform-express": "^11.1.3",
		"@opentelemetry/api": "^1.9.0",
